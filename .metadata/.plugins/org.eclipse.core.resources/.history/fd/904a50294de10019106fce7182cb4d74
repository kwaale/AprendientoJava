package vectores;

import java.util.Scanner;

public class SueldoTurnos {
	// Una empresa tiene dos turnos (mañana y tarde) en los que trabajan 8
	// empleados
	// (4 por la mañana y 4 por la tarde).
	// Confeccionar un programa que permita almacenar los sueldos de los
	// empleados
	// agrupados por turno.
	// Imprimir los gastos en sueldos de cada turno.
	private Scanner s;
	private float[] turnoMan;
	private float[] turnoTar;

	public void carga() {
		s = new Scanner(System.in);
		turnoMan = new float[4];
		turnoTar = new float[4];
		System.out.println("Sueldos empleados de la mañana");
		for (int f = 0; f < 4; f++) {
			System.out.print("Ingrese sueldo: ");
			turnoMan[f] = s.nextFloat();
		}
		System.out.println("Suldos emplesdos de la tarde");
		for (int f = 0; f < 4; f++) {
			System.out.print("Ingruese sueldo: ");
			turnoTar[f] = s.nextFloat();
		}
	}

	public void calculoGastos() {
		float man = 0;
		float tar = 0;
		for (int f = 0; f < 4; f++) {
			man = man + turnoMan[f];
			tar = tar + turnoTar[f];
			
		}
		System.out.println("Gastos sueldos mañana: " + man);
		System.out.println("Gastos sueldos tarde: " + tar);
	}
}
