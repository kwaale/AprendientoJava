package vectores;

import java.util.Scanner;

public class VectorTriple {
//Realizar un programa que pida la carga de dos vectores numéricos enteros
	//de 4 elementos.
	//Obtener la suma de los dos vectores, dicho resultado guardarlo en un tercer
	//vector del mismo tamaño. Sumar componente a componente.
	private Scanner s;
	private int []vec1;
	private int []vec2;
	private int []vec3;
	
	public void cargaVec1(){
		s = new Scanner(System.in);
		vec1 = new int[4];
		System.out.println("Carga vector 1.");
		for(int i = 0; i < 4; i++){
			System.out.print("Introduce un valor: ");
			vec1[i] = s.nextInt();
		}
	}
	public void cargaVec2(){
		
		vec2 = new int[4];
		System.out.println("Carga vector 2.");
		for(int i = 0; i < 4; i++){
			System.out.print("Introduce un valor: ");
			vec2[i]= s.nextInt();
		}
	}
	public void cargaVec3(){
		vec3 = new int[4];
		System.out.println("Carga vector 3.");
		for(int i = 0; i < 4; i++){
			vec3[i] = vec2[i]+vec1[i];
		}
	}
	public void imprimirVector3(){
		for(int i = 0; i < 4; i++){
			System.out.println("Valor Vector 3: " + vec3[i]);
			
			
		}
	}
}
