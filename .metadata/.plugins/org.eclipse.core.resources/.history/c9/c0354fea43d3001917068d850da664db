package objetos;

import java.util.Scanner;

public class Cuadrante {
	// Desarrollar una clase que represente un punto en el plano
	// y tenga los siguientes métodos:
	// cargar los valores de x e y
	// imprimir en que cuadrante se encuentra dicho punto
	// (concepto matemático, primer cuadrante si x e y son positivas,
	// si x<0 e y>0 segundo cuadrante, etc.)
	private Scanner s;
	private int x;
	private int y;

	public void cargaValores() {
		s = new Scanner(System.in);
		System.out.print("Introduzca el valor de x: ");
		x = s.nextInt();
		System.out.print("Introduzca el valor de y: ");
		y = s.nextInt();
	}

	public void cuadrante() {
		if (x > 0 && y > 0) {
			System.out.println("El punto se encuentra en el cuadrante 1.");
		} else {
			if (x < 0 && y < 0) {
				System.out.println("El punto se encuentra en el cuadrante 3.");
			} else {
				if (x < 0 && y > 0) {
					System.out.println("El punto se encuentra en el cuadrante 2.");
				} else {
					if (x > 0 && y < 0) {
						System.out.println("El punto se encuentra en el cuadrante 4.");
					} else {
						System.out.println("El punto se encuentra en el cuadrante e.");
					}

				}
			}
		}
	}
	
}
