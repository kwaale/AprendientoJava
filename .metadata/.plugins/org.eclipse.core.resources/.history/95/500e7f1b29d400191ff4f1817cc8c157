package declaracionMetodos;

import java.util.Scanner;

//Confeccionar una clase que permita ingresar tres valores por teclado.
//Luego mostrar el mayor y el menor.
public class RetornanDato {
	public void cargaValores() {
		Scanner s = new Scanner(System.in);
		System.out.print("Ingres un valor 1: ");
		int valor1 = s.nextInt();
		System.out.print("Ingres un valor 2: ");
		int valor2 = s.nextInt();
		System.out.print("Ingres un valor 3: ");
		int valor3 = s.nextInt();
		int mayor, menor;
		mayor = calcularMayor(valor1, valor2, valor3);
		menor = calcularMenor(valor1, valor2, valor3);
		System.out.println("El valor mayor es " + mayor);
		System.out.println("El valor menor es " + menor);
		s.close();
	}

	public int calcularMayor(int v1, int v2, int v3) {
		int m;
		if (v1 < v2 && v1 < v3) {
			m = v1;
		} else {
			if (v2 < v3) {
				m = v2;
			} else {
				m = v3;
			}
		}
		return m;
	}

	public int calcularMenor(int v1, int v2, int v3) {
		int m;
		if (v1 > v2 && v1 > v2) {
			m = v1;
		} else {
			if (v2 > v3) {
				m = v2;
			} else {
				m = v3;
			}
		}
		return m;
	}
}
