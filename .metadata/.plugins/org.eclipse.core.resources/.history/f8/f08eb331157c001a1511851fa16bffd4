def cargaListaPalabras():
    listaPalabras = []
    for i in range(5):
        palabra = input("Introduce una palabra " + str(i + 1) + ": ")
        listaPalabras.append(palabra)
    return listaPalabras

def palabrasMasDe5caracteres(lista):
    for i in lista:
#        len(lista[i])
        print(lista[i])
        print(len(lista[i]))
    
palabrasMasDe5caracteres(['pera', 'casa', 'perra', 'carro', 'tren'])
