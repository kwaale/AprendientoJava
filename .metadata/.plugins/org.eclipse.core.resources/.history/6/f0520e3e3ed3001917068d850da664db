package objetos;

import java.util.Scanner;

public class Triangulo {
//Desarrollar un programa que cargue los lados de un triángulo e 
	//implemente los siguientes métodos:
	//inicializar los atributos
	//imprimir el valor del lado mayor
	//Otro método que muestre si es equilátero o no.
	
	private Scanner scan;
	private int lado1, lado2, lado3;
	
	public void inicializar(){
		scan = new Scanner(System.in);
		System.out.print("Introduzca el lado 1: ");
		lado1 = scan.nextInt();
		System.out.print("Introduzca el lado 2: ");
		lado2 = scan.nextInt();
		System.out.print("Introduzca el lado 3: ");
		lado3 = scan.nextInt();
		
	}
	public void ladoMayor(){
		if(lado1 > lado2 && lado1 > lado3){
			System.out.println("El lado mayor es el lado 1: " + lado1);
			
		}else{
			if(lado2 > lado3 && lado2 > lado3){
				System.out.println("El lado mayor es el lado 2: " + lado2);
			}else{
				System.out.println("El lado mayor es el lado 3: " + lado3);
			}
		}
	}
	public void equilatero(){
		if(lado1==lado2 && lado2 == lado3){
			System.out.println("El triangulo es equilatero y cada lado mide: " + lado3);
		}
	}
}

