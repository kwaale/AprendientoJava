package objetos;

import java.util.Scanner;

public class Triangulo {
	// Desarrollar un programa que cargue los lados de un triángulo
	// e implemente los siguientes métodos:
	// inicializar los atributos
	// imprimir el valor del lado mayor y otro método que muestre
	// si es equilátero o no.

	private int lado1;
	private int lado2;
	private int lado3;
	private Scanner s;

	public void cargaLados() {
		s = new Scanner(System.in);
		System.out.println("Introduzca lado 1 del triangulo: ");
		lado1 = s.nextInt();
		System.out.println("Introduzca lado 2 del triangulo: ");
		lado2 = s.nextInt();
		System.out.println("Introduzca lado 3 del triangulo: ");
		lado3 = s.nextInt();
	}

	public void ladoMayor() {
		if (lado1 > lado2 && lado1 > lado3) {
			System.out.println("El lado mayor es lado 1 que mide: " + lado1);
		} else {
			if (lado2 > lado3) {
				System.out.println("El lado mayor es lado 2 que mide: " + lado2);
			} else {
				System.out.println("El lado mayor es lado 3 que mide: " + lado3);
			}
		}
	}

	public void siEsEquilatero() {
		if (lado1 == lado2 && lado2 == lado3) {
			System.out.println("El triangulo es equilatero.");
		}else{
			System.out.println("El triangulo no es equilatero.");
		}

	}

}
