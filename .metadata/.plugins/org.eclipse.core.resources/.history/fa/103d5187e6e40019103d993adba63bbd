package objetos;

import java.util.Scanner;

public class Cuadrado {
	// Desarrollar una clase que represente un Cuadrado
	// y tenga los siguientes métodos:
	// cargar el valor de su lado
	// imprimir su perímetro y su superficie.
	private Scanner s;
	private int lado;
	private int perimetro;
	private int superficie;

	public void carga() {
		s = new Scanner(System.in);
		System.out.print("Introduzca un lado: ");
		lado = s.nextInt();
	}

	public void perimetro() {
		perimetro = lado * 4;
		System.out.println("El perimetro es " + perimetro);
	}

	public void superficie() {
		superficie = lado * lado;
		System.out.println("El superficie es " + superficie);
	}
}
